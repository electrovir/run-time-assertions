{
    "name": "run-time-assertions",
    "version": "0.0.1",
    "description": "Type safe assertions that work just as well in production run-times as they do in testing.",
    "keywords": [],
    "homepage": "https://github.com/electrovir/run-time-assertions",
    "bugs": {
        "url": "https://github.com/electrovir/run-time-assertions/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/electrovir/run-time-assertions"
    },
    "license": "(MIT or CC0 1.0)",
    "author": {
        "name": "electrovir",
        "url": "https://github.com/electrovir"
    },
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/types/index.d.ts",
    "scripts": {
        "compile": "tsc --project tsconfig.json && tsc --project tsconfig.cjs.json",
        "docs:update": "virmator code-in-markdown && typedoc --options configs/typedoc.config.js",
        "format": "virmator format",
        "publish": "virmator publish \"npm run compile && npm run test:all\"",
        "test": "virmator test-web",
        "test:all": "concurrently --colors --kill-others-on-fail -c auto --names types,tests,spelling,format,docs \"npm run test:types\" \"npm run test:coverage\" \"npm run test:spelling\" \"npm run test:format\" \"npm run test:docs\"",
        "test:coverage": "npm run test coverage",
        "test:docs": "virmator code-in-markdown check && typedoc --options configs/typedoc.config.js --emit none",
        "test:format": "virmator format check",
        "test:spelling": "virmator spellcheck",
        "test:types": "tsc --noEmit"
    },
    "dependencies": {
        "@augment-vir/common": "^18.2.0",
        "type-fest": "^4.3.1"
    },
    "devDependencies": {
        "@augment-vir/browser-testing": "^18.2.0",
        "@open-wc/testing": "^3.2.0",
        "@types/mocha": "^10.0.1",
        "@web/dev-server-esbuild": "^0.4.1",
        "@web/test-runner": "^0.17.1",
        "@web/test-runner-commands": "^0.8.0",
        "@web/test-runner-playwright": "^0.10.1",
        "@web/test-runner-visual-regression": "^0.8.2",
        "cspell": "^7.3.6",
        "istanbul-smart-text-reporter": "^1.1.2",
        "markdown-code-example-inserter": "^0.3.1",
        "npm-check-updates": "^16.14.4",
        "prettier": "^2.8.8",
        "prettier-plugin-interpolated-html-tags": "^0.0.4",
        "prettier-plugin-jsdoc": "^0.4.2",
        "prettier-plugin-multiline-arrays": "^2.0.0",
        "prettier-plugin-organize-imports": "^3.2.3",
        "prettier-plugin-packagejson": "^2.4.5",
        "prettier-plugin-sort-json": "^2.0.0",
        "prettier-plugin-toml": "^0.3.5",
        "typedoc": "^0.25.1",
        "typescript": "^5.2.2",
        "virmator": "^7.4.1"
    }
}
